@model List<producto.Producto>
@{
    Layout = "_Layout";  // Esto asegura que use el layout compartido
}
<h2>Lista de Productos</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Descripci√≥n</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
                <tr>
                    <td>@producto.IdProducto</td>
                    <td>@producto.Descripcion</td>
                    <td>@producto.Precio</td>
                    <td>
                        <a href="@Url.Action("Modificar", "ProductoControllers", new { id = producto.IdProducto })">Modificar</a> |
                        <a href="@Url.Action("Eliminar", "ProductoControllers", new { id = producto.IdProducto })">Eliminar</a>
                    </td>
                </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Crear", "ProductoControllers")">Crear nuevo producto</a>
